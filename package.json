{
  "name": "coraline",
  "description": "Your favourite package helper.",
  "version": "2024.2.19",
  "author": {
    "email": "simonegauli@gmail.com",
    "name": "Simone Gauli"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pnlvfx/coraline.git"
  },
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "exports": {
    "types": "./dist/esm/coraline.d.ts",
    "import": "./dist/esm/coraline.js",
    "require": "./dist/cjs/coraline.js"
  },
  "scripts": {
    "tsc": "tsc --noEmit true",
    "generate:package.json": "tsx ./tools/generate-commonjs-package-json.ts dist/cjs/package.json",
    "unused": "tsx ./tools/unused.ts",
    "lint": "eslint",
    "build": "rimraf dist && npm run unused && eslint && npm run build:esm && npm run build:cjs && npm run generate:package.json",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.json --module CommonJS --moduleResolution Node --outDir dist/cjs",
    "prepack": "npm run build",
    "prepare": "npm run build",
    "prepublishOnly": "npm run test && eslint"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "coraline-client": "github:Pnlvfx/coraline-client#c28085ddae3a3383ac02c1066ef6a71f913d7b18",
    "ts-unused-exports": "^10.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.5.5",
    "eslint": "^9.10.0",
    "eslint-plugin-sonarjs": "^2.0.2",
    "eslint-plugin-unicorn": "^55.0.0",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.6.0"
  }
}
